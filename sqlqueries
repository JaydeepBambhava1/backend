MariaDB [School]> create function Daily_wages(wage decimal(10,2))
-> returns decimal(10,2)
-> deterministic
-> begin
-> declare daily_wage decimal(10,2);
-> set daily_wage = wage * 8;
-> return(daily_wage);
-> end $$
